<script type="application/javascript">
    $(document).ready(function () {

        $('#submit-it').click(function (e) {
            e.preventDefault();

            let flwref = $('#flwref').val(), barterRef = $('#ref').val();
            if (flwref === '' || barterRef === ''){
                return false;
            } else {
                const data = {
                    flw_ref: flwref,
                    reference: barterRef
                };
                $('#submit-it').html("PROCESSING").attr("disabled", "disabled");
                $.ajax({
                    url:'/status-check',
                    type: 'json',
                    data: data,
                    method: 'POST',
                    success:function (response) {
                        $('#submit-it').html("RE-QUERY").removeAttr("disabled");
                        if (response.status === 'success') {
                            iziToast.success({
                                title: 'Success',
                                message: response.message,
                                position: 'topRight',
                                timeout: 6000
                            });
                        } else {
                            iziToast.error({
                                title: 'Oops!',
                                message: response.message,
                                position:'topRight',
                                timeout: 6000
                            });
                        }

                    },
                    error: function (error) {
                        iziToast.error({
                            title: 'Oops!',
                            message: error.message,
                            position:'topRight',
                            timeout: 7000
                        });
                    }

                })
            }

        });

    })
</script>